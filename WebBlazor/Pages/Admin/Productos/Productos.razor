@page "/productos"
@using Service.Models

@inject IGenericService<Producto> _serviceProducto
@inject NavigationManager NavigationManager
@inject FirebaseAuthService _authService
@inject SweetAlertService sweetAlert
<PageTitle>Inventario de Productos</PageTitle>

<!-- Componente asumido para el título de la página -->
<PageHeader Title="Inventario de Productos" Description="Administra, edita y elimina los productos de la carnicería." />

@if (productos == null)
{
	<p class="loading-message"><em>Cargando la lista de productos...</em></p>
}
else if (!productos.Any())
{
	<p><em>No hay productos disponibles.</em></p>
}
else
{
	<NavLink class="btn btn-primary mb-3" href=@($"NuevoEditarProducto")>
		<span class="bi bi-plus-circle"></span> Agregar producto
	</NavLink>

	<table class="table table-hover table-striped products-table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Nombre</th>
				<th>Categoría</th>
				<th>Precio</th>
				<th>Stock</th>
				<th>Unidad</th>
				<th colspan="2" class="text-center">Acciones</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var pro in productos)
			{
				<tr class="product-row">
					<td class="text-muted small">@pro.Id</td>
					<td>
						<span class="product-name">@pro.Nombre</span>
					</td>
					<td>
						<span class="category-badge">@pro.Categoria?.Nombre</span>
					</td>
					<td>
						<span class="price-highlight">$@pro.PrecioUnitario.ToString("N2")</span>
					</td>
					<td>
						<span class="stock-badge @GetStockClass(pro.Stock)">
							@pro.Stock
						</span>
					</td>
					<td>
						<span class="unit-badge">@pro.Unidad</span>
					</td>

					<td class="text-center">
						<NavLink class="btn btn-sm btn-edit action-btn" href=@($"NuevoEditarProducto?idProducto={pro.Id}") title="Editar producto">
							<span class="bi bi-pencil"></span> Editar
						</NavLink>
					</td>
					<td class="text-center">
						<button class="btn btn-sm btn-delete action-btn" @onclick="() => DeleteProducto(pro)" title="Eliminar producto">
							<span class="bi bi-trash"></span> Eliminar
						</button>
					</td>
				</tr>
			}
		</tbody>
	</table>
}

@code {
	private List<Producto>? productos;

	protected override async Task OnInitializedAsync()
	{
		// 1. Verificación de Autenticación
		if (!await _authService.IsUserAuthenticated())
		{
			NavigationManager.NavigateTo("/login");
			return;
		}

		// 2. Carga de Productos
		try
		{
			productos = await _serviceProducto.GetAllAsync();
		}
		catch (Exception ex)
		{
			await sweetAlert.FireAsync(new SweetAlertOptions
			{
				Icon = SweetAlertIcon.Error,
				Title = "Error",
				Text = $"Error al cargar productos: {ex.Message}"
			});
		}
	}

	private async Task DeleteProducto(Producto pro)
	{
		var result = await sweetAlert.FireAsync(new SweetAlertOptions
		{
			Icon = SweetAlertIcon.Question,
			Title = "Confirmar eliminación",
			Text = $"¿Deseas eliminar {pro.Nombre}?",
			ShowCancelButton = true
		});

		if (result.IsConfirmed)
		{
			try
			{
				await _serviceProducto.DeleteAsync(pro.Id);
				productos?.Remove(pro);
				await sweetAlert.FireAsync(new SweetAlertOptions
				{
					Icon = SweetAlertIcon.Success,
					Title = "Éxito",
					Text = "Producto eliminado correctamente"
				});
			}
			catch (Exception ex)
			{
				await sweetAlert.FireAsync(new SweetAlertOptions
				{
					Icon = SweetAlertIcon.Error,
					Title = "Error",
					Text = $"Error al eliminar: {ex.Message}"
				});
			}
		}
	}

	// Clase CSS para el badge de stock
	private string GetStockClass(int stock)
	{
		return stock switch
		{
			> 50 => "badge-success-custom",
			> 20 => "badge-warning-custom",
			_ => "badge-danger-custom"
		};
	}
}