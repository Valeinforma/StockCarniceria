@inject FirebaseAuthService _firebaseAuthService
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">StockCarniceria</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> inicio
            </NavLink>
        </div>
        
        @if (isAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="productos"> <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Stock
                </NavLink>
            </div>
        }
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="login">
                <span class="bi bi-login" aria-hidden="true"></span>@textBtnLogin
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool isAuthenticated = false;
    private string textBtnLogin => isAuthenticated ? "Cerrar sesión" : "Iniciar sesión";

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    
    // 1. Inicializa y se suscribe al evento de cambio de login
    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await _firebaseAuthService.IsUserAuthenticated();
        _firebaseAuthService.OnChangeLogin += LoginHasChanged;
    }
    
    // 2. Método de limpieza: Se llama cuando el componente es destruido
    public void Dispose()
    {
        // CRÍTICO: Desuscribirse para prevenir memory leaks
        _firebaseAuthService.OnChangeLogin -= LoginHasChanged; 
    }
    
    // 3. El delegado que se dispara cuando cambia el estado de login
    private async void LoginHasChanged()
    {
        // Volvemos a verificar el estado de autenticación
        isAuthenticated = await _firebaseAuthService.IsUserAuthenticated();
        
        // CRÍTICO: Forzar a Blazor a refrescar la UI
        await InvokeAsync(StateHasChanged); 
    }
}