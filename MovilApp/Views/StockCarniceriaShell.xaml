        ContentTemplate="{DataTemplate login:SignInView}"
        Route="Registrarse"
        FlyoutItemIsVisible="False"/>

    <FlyoutItem
        Route="nuestra_app"
        FlyoutDisplayOptions="AsMultipleItems"
        x:Name="FlyoutItemsPrincipal"
        IsEnabled="{Binding UserIsLogged}">

        <ShellContent
