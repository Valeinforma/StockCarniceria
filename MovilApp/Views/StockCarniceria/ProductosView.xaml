<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MovilApp.ViewModels.Productos"
             x:Class="MovilApp.Views.StockCarniceria.ProductosView"
             Title="Inventario de Productos">

    <ContentPage.BindingContext>
        <vm:ProductosViewModel/>
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, *">

        <ScrollView Grid.Row="0" Grid.RowSpan="2">
            <VerticalStackLayout Spacing="20" Padding="20">


                <!-- Encabezado principal -->
                <Frame BackgroundColor="#B70000" 
                    Padding="20" 
                    CornerRadius="15" 
                    HasShadow="True">
                    <StackLayout>
                        <Label Text="Inventario de Cortes" 
                            FontSize="26" 
                            FontAttributes="Bold"
                            TextColor="White"
                            HorizontalOptions="Center"/>
                        <Label Text="Administra y busca tus productos cÃ¡rnicos" 
                            FontSize="14"
                            TextColor="#FFE4E1"
                            HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>

                <!-- SecciÃ³n de bÃºsqueda -->
                <Frame BackgroundColor="White" 
                    Padding="15" 
                    CornerRadius="12" 
                    HasShadow="True"
                    BorderColor="#D2691E">
                    <StackLayout Spacing="15">
                        <Label Text="Â¿QuÃ© producto estÃ¡s buscando?" 
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="#3E2723"/>

                        <!-- SearchBar -->
                        <Frame BackgroundColor="#FFF8F0" 
                            Padding="5" 
                            CornerRadius="10"
                            HasShadow="False"
                            BorderColor="#D2691E">
                            <SearchBar Placeholder="Buscar por tÃ­tulo, producto..." 
                                Text="{Binding TextoBusqueda}"
                                SearchCommand="{Binding BuscarCommand}"
                                BackgroundColor="Transparent"
                                PlaceholderColor="#8B7355"
                                TextColor="#3E2723"
                                FontSize="16"/>
                        </Frame>

                        <!-- Botones de acciÃ³n -->
                        <Button Text="ðŸ” Buscar" 
                            Command="{Binding BuscarCommand}"
                            BackgroundColor="#A0522D"
                            TextColor="White"
                            CornerRadius="8"
                            FontSize="14"/>

                        <Button Text="ðŸ§¹ Limpiar BÃºsqueda" 
                            Command="{Binding LimpiarCommand}"
                            BackgroundColor="#D3D3D3"
                            TextColor="#3E2723"
                            CornerRadius="8"
                            FontSize="14"/>

                        <!-- Indicador de carga -->
                        <StackLayout IsVisible="{Binding EstaDescargando}" 
                            Orientation="Horizontal" 
                            HorizontalOptions="Center"
                            Spacing="10">
                            <ActivityIndicator IsRunning="{Binding EstaDescargando}"
                                Color="#B70000"/>
                            <Label Text="Buscando productos..." 
                                TextColor="#B70000"
                                VerticalOptions="Center"
                                FontSize="14"/>
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- SecciÃ³n de resultados -->
                <StackLayout Spacing="15">

                    <!-- Encabezado de resultados -->
                    <Frame BackgroundColor="#DEB887" 
                        Padding="12" 
                        CornerRadius="10" 
                        HasShadow="True"
                        BorderColor="#8B4513">
                        <StackLayout>
                            <Label Text="Resultados de Inventario" 
                                FontSize="18" 
                                FontAttributes="Bold"
                                TextColor="#3E2723"
                                HorizontalOptions="Center"/>
                            <Label Text="{Binding Productos.Count, StringFormat='{0} productos encontrados'}"
                                FontSize="14"
                                TextColor="#3E2723"
                                HorizontalOptions="Center"/>
                        </StackLayout>
                    </Frame>

                    <!-- Mensaje de error -->
                    <Label Text="{Binding MensajeError}"
                        IsVisible="{Binding MensajeError, Converter={StaticResource StringIsNotNullOrEmptyConverter}}"
                        TextColor="#B70000"
                        FontSize="16"
                        HorizontalOptions="Center"
                        FontAttributes="Italic"
                        Margin="0,10,0,0"/>

                    <!-- Lista de productos -->
                    <CollectionView ItemsSource="{Binding Productos}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="White" 
                                    Padding="20" 
                                    Margin="0,8"
                                    CornerRadius="15"
                                    HasShadow="True"
                                    BorderColor="#D2691E">

                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProductosViewModel}}, Path=VerDetalleCommand}"
                                            CommandParameter="{Binding .}"/>
                                    </Frame.GestureRecognizers>

                                    <Grid ColumnDefinitions="Auto, *, Auto" 
                                        RowDefinitions="Auto, Auto, Auto, Auto">

                                        <!-- Icono principal -->
                                        <Label Grid.Column="0" Grid.Row="0" Grid.RowSpan="4"
                                            Text="ðŸ¥©" 
                                            FontSize="40"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Center"
                                            Margin="0,0,15,0"/>

                                        <!-- Nombre del producto -->
                                        <Label Grid.Column="1" Grid.Row="0"
                                            Text="{Binding Nombre}" 
                                            FontSize="18"
                                            FontAttributes="Bold"
                                            TextColor="#3E2723"
                                            LineBreakMode="WordWrap"/>

                                        <!-- Precio -->
                                        <StackLayout Grid.Column="1" Grid.Row="1" 
                                            Orientation="Horizontal" 
                                            Spacing="5"
                                            Margin="0,5,0,0">
                                            <Label Text="ðŸ’²" FontSize="14"/>
                                            <Label Text="{Binding PrecioUnitario, StringFormat='${0:N2}'}" 
                                                FontSize="16"
                                                TextColor="#B70000"
                                                FontAttributes="Bold"
                                                LineBreakMode="NoWrap"/>
                                        </StackLayout>

                                        <!-- CategorÃ­a -->
                                        <StackLayout Grid.Column="1" Grid.Row="2" 
                                            Orientation="Horizontal" 
                                            Spacing="5"
                                            Margin="0,2,0,0">
                                            <Label Text="ðŸ·ï¸" FontSize="14"/>
                                            <Label Text="{Binding Categoria.Nombre}" 
                                                FontSize="14"
                                                TextColor="#8B7355"/>
                                        </StackLayout>

                                        <!-- Stock -->
                                        <StackLayout Grid.Column="1" Grid.Row="3" 
                                            Orientation="Horizontal" 
                                            Spacing="5"
                                            Margin="0,2,0,0">
                                            <Label Text="ðŸ“¦" FontSize="14"/>
                                            <Label Text="{Binding Stock, StringFormat='Stock: {0} {1}'}" 
                                                FontSize="14"
                                                TextColor="#8B7355"/>
                                        </StackLayout>

                                        <!-- BotÃ³n de ver detalles -->
                                        <Button Grid.Column="2" Grid.Row="0" Grid.RowSpan="4"
                                            Text="Ver"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProductosViewModel}}, Path=VerDetalleCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#A0522D"
                                            TextColor="White"
                                            CornerRadius="10"
                                            FontSize="14"
                                            WidthRequest="60"
                                            HeightRequest="60"
                                            VerticalOptions="Center"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>